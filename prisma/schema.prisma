// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model User {
  id           String         @id @default(cuid())
  name         String
  email        String
  password     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  Poop         Poop[]
  Achievements Achievements[]
}

model Poop {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  withoutPoop Boolean
  rating      Int
  consistency Int
  goldenPoop  Boolean
  timeInMS    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
}

model Achievements {
  id          String   @id @default(cuid())
  user        User[]
  achievement String
  title       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
}
